<UserControl x:Class="CarGo.CarListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CarGo">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*"></ColumnDefinition>
            <ColumnDefinition Width="0.7*"></ColumnDefinition>
            <ColumnDefinition Width="0.8*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="0.6*"></ColumnDefinition>
            <ColumnDefinition Width="0.8*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Label Grid.Column="0" HorizontalAlignment="Center">1</Label>
        <TextBlock Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">#TEST</TextBlock>
        <Label Grid.Column="2" HorizontalAlignment="Center">#TEST</Label>
        <Label Grid.Column="3" HorizontalAlignment="Center">#TEST</Label>
        <Ellipse x:Name="Color" Grid.Column="4" HorizontalAlignment="Center" VerticalAlignment="Center" Width="15" Height="15" Fill="DarkKhaki"></Ellipse>
        <CheckBox x:Name="Check" Grid.Column="5" HorizontalAlignment="Center" VerticalAlignment="Center" IsChecked="True"></CheckBox>
    </Grid>

</UserControl>
